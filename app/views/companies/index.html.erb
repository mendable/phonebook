<h1>Listing companies</h1>

<table>
  <tr class="odd">
    <th>Name</th>
    <th>Address1</th>
    <th>Town</th>
    <th>County</th>
    <th>Postcode</th>
    <th colspan="3">&nbsp;</th>
  </tr>

<% @companies.each do |company| %>
  <tr class="<%= cycle(*%w{odd even}) %>">
    <td><%= link_to company.name, company %></td>
    <td><%=h company.address1 %></td>
    <td><%=h company.town %></td>
    <td><%=h company.county %></td>
    <td><%=h company.postcode %></td>
    <td><%= link_to 'Contacts (' + company.contacts.size.to_s + ')', company_contacts_path(company) %></td>
    <td><%= link_to 'Edit', edit_company_path(company) %></td>
    <td><%= link_to 'Destroy', company, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

